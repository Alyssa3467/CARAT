{
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true,
    "mocha": true,
    "mongo": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:promise/recommended",
    "google",
    "prettier"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "strict": ["error", "global"],
    "require-atomic-updates": "error",
    "no-magic-numbers": "warn",
    "no-confusing-arrow": "error",
    "no-console": "warn",
    "no-extra-parens": "warn",
    "node/no-sync": "warn",
    "quotes": [
      "warn",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "linebreak-style": ["error", "windows"],
    "semi": ["error", "always"]
  },
  "reportUnusedDisableDirectives": true,
  "ignorePatterns": ["/common/logger/index.js"]
}
